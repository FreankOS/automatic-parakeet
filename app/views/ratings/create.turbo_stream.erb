<%= turbo_stream.replace "rating_form_#{@game.id}" do %>
  <%= render 'shared/rating_form', game: @game %>
<% end %>

<%= turbo_stream.replace "rating_display_#{@game.id}" do %>
  <%= render 'shared/rating_display', game: @game %>
<% end %>

<%= turbo_stream.prepend "flash_messages" do %>
  <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mx-4 mt-4" role="alert">
    <div class="flex items-center">
      <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Thank you for rating <%= @game.name %>!
    </div>
  </div>
<% end %>