<div class="inline-flex" data-controller="toggle">
  <!-- Trigger Button -->
  <%= yield :overlay_button %>

  <!-- Overlay -->
  <div data-toggle-name="<%= overlay_name %>" class="hidden">
    <!-- Background -->
    <div class="fixed inset-0 bg-black/80 z-40" 
         data-action="click->toggle#toggle" 
         data-toggle-target-name="<%= overlay_name %>"></div>

    <!-- Window -->
    <div class="fixed inset-0 z-50 flex items-center justify-center">
      <div class="relative sm:max-w-[600px] sm:max-h-[400px] w-full h-full 
                  bg-[#041221] rounded-lg shadow-lg border border-[#cc6600] p-6 overflow-y-auto">
        
        <!-- Close Button -->
        <button class="absolute top-3 right-3 cursor-pointer hover:opacity-80" 
                aria-label="Close"
                data-action="click->toggle#toggle"
                data-toggle-target-name="<%= overlay_name %>">
          <%= image_tag 'icons/close.svg' %>
        </button>

        <!-- Title -->
        <h3 class="font-medium text-white mb-4 text-2xl"><%= overlay_title %></h3>

        <!-- Content -->
        <%= yield :overlay_content %>
      </div>
    </div>
  </div>
</div>
