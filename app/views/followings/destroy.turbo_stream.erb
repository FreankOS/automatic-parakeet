<%= turbo_stream.replace "follow_button_#{@game.id}" do %>
  <%= render 'shared/follow_button', game: @game, style: :icon %>
<% end %>

<%= turbo_stream.prepend "flash_messages" do %>
  <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg mx-4 mt-4" role="alert">
    <div class="flex items-center">
      <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Unfollowed <%= @game.name %>.
    </div>
  </div>
<% end %>
