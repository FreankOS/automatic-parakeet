<div data-controller="comments hashtag">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-3xl">
      <%= pluralize(game.comments.count, 'comment') %>
    </h3>
  </div>

  <!-- New Comment Form -->
  <div>
    <%= form_with model: [game, game.comments.build],
                  url: game_comments_path(game),
                  local: true,
                  class: "space-y-4" do |f| %>
      <div class="flex items-start space-x-3">
        <div class="flex-grow"
             data-controller="character-counter"
             data-character-counter-min-length-value="20"
             data-character-counter-max-length-value="500"
             data-character-counter-show-min-value="true">
          <%= f.text_area :content,
                placeholder: t('comments.write_comment'),
                rows: 3,
                data: { character_counter_target: "input", action: "input->character-counter#updateCounter" },
                class: "w-full px-3 py-2 border  border-[#393a3a] rounded-md" %>
          <span data-character-counter-target="counter" class="text-gray-400 text-sm"></span>
          <div class="text-xs text-gray-500 mt-1">
            <%= t('comments.markdown_support') %> â€¢ <%= t('comments.character_limit', min: 20, max: 500) %>
          </div>
        </div>
      </div>
      <div class="flex justify-end">
        <% if user_signed_in? %>
          <%= f.submit t('comments.post_comment'),
                class: "px-6 py-2 bg-[#cc6600] text-white rounded-md" %>
        <% else %>
          <%= link_to t('comments.post_comment'), new_user_session_path,
                class: "px-6 py-2 bg-[#cc6600] text-white rounded-md" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Comments List -->
  <div class="space-y-4">
    <% if game.comments.top_level.any? %>
      <% game.comments.top_level.ordered.includes(:user, :replies).each do |comment| %>
        <%= render 'comments/comment', comment: comment %>
      <% end %>
    <% else %>
      <div class="p-8 text-center">
        <%= image_tag "icons/comment.svg", class: "mx-auto h-12 w-12 mb-4" %>
        <h3 class="text-lg font-medium text-white mb-2"><%= t('comments.no_comments') %></h3>
        <p class="text-gray-500"><%= t('comments.be_first') %></p>
      </div>
    <% end %>
  </div>
</div>
