<div class="bg-gray-50 rounded-lg p-6" data-controller="comments">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-xl font-semibold text-gray-900">
      Comments
      <span class="text-sm font-normal text-gray-500">
        (<%= pluralize(game.comments.count, 'comment') %>)
      </span>
    </h3>
  </div>

  <!-- New Comment Form -->
  <% if user_signed_in? %>
    <div class="bg-white rounded-lg border border-gray-200 p-4 mb-6">
      <%= form_with model: [game, game.comments.build],
                    url: game_comments_path(game),
                    local: true,
                    class: "space-y-4" do |f| %>
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
              <%= current_user.avatar_placeholder %>
            </div>
          </div>
          <div class="flex-grow">
            <%= f.text_area :content,
                  placeholder: t('comments.write_comment'),
                  rows: 3,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" %>
          </div>
        </div>
        <div class="flex justify-end">
          <%= f.submit t('comments.post_comment'),
                class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 p-4 mb-6 text-center">
      <p class="text-gray-600 mb-4"><%= t('comments.sign_in_to_comment') %></p>
      <%= link_to t('navigation.sign_in'), new_user_session_path,
            class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>

  <!-- Comments List -->
  <div class="space-y-4">
    <% if game.comments.top_level.any? %>
      <% game.comments.top_level.ordered.includes(:user, :replies).each do |comment| %>
        <%= render 'comments/comment', comment: comment %>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.477 8-9.99 8a9.935 9.935 0 01-4.24-.924L3 20l1.077-3.572A9.934 9.934 0 013 12c0-5.523 4.477-10 10-10s10 4.477 10 10z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('comments.no_comments') %></h3>
        <p class="text-gray-500"><%= t('comments.be_first') %></p>
      </div>
    <% end %>
  </div>
</div>
