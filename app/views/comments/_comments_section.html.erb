<div data-controller="comments hashtag">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-3xl">
      <%= pluralize(game.comments.count, 'comment') %>
    </h3>
  </div>

  <!-- New Comment Form -->
  <div>
    <%= form_with model: [game, game.comments.build],
                  url: game_comments_path(game),
                  local: true,
                  class: "space-y-4" do |f| %>
      <div class="flex items-start space-x-3">
        <div class="flex-grow">
          <%= f.text_area :content,
                placeholder: t('comments.write_comment'),
                rows: 3,
                class: "w-full px-3 py-2 border  border-[#393a3a] rounded-md" %>
          <div class="text-xs text-gray-500 mt-1">
            <%= t('comments.markdown_support') %> â€¢ <%= t('comments.character_limit', min: 20, max: 500) %>
          </div>
        </div>
      </div>
      <div class="flex justify-end">
        <% if user_signed_in? %>
          <%= f.submit t('comments.post_comment'),
                class: "px-6 py-2 bg-[#cc6600] text-white rounded-md" %>
        <% else %>
          <%= link_to t('comments.post_comment'), new_user_session_path,
                class: "px-6 py-2 bg-[#cc6600] text-white rounded-md" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Comments List -->
  <div class="space-y-4">
    <% if game.comments.top_level.any? %>
      <% game.comments.top_level.ordered.includes(:user, :replies).each do |comment| %>
        <%= render 'comments/comment', comment: comment %>
      <% end %>
    <% else %>
      <div class="p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.477 8-9.99 8a9.935 9.935 0 01-4.24-.924L3 20l1.077-3.572A9.934 9.934 0 013 12c0-5.523 4.477-10 10-10s10 4.477 10 10z"></path>
        </svg>
        <h3 class="text-lg font-medium text-white mb-2"><%= t('comments.no_comments') %></h3>
        <p class="text-gray-500"><%= t('comments.be_first') %></p>
      </div>
    <% end %>
  </div>
</div>
