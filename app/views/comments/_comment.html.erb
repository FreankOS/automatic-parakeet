<div class="mb-4" id="comment_<%= comment.id %>">
  <div class="flex items-start space-x-3">
    <!-- Comment Content -->
    <div class="flex-grow">
      <div class="flex items-baseline space-x-2">
        <h4>
          <%= link_to comment.user.username, user_path(comment.user), class: "text-xl text-white" %>
        </h4>
        <% if comment.user.respond_to?(:created_since?) && comment.user.created_since?(30) %>
          <span class="text-xs px-1 bg-[#cc6600] rounded-lg">New</span>
        <% end %>
        <span class="text-xs text-gray-500">
          <%= l comment.created_at, format: :short %>
        </span>
        <% if comment.updated_at > comment.created_at + 1.minute %>
          <span class="text-xs text-gray-400"><%= t('comments.edited') %></span>
        <% end %>
      </div>

      <div class="text-sm text-white comment-content">
        <%= comment.content_html %>
      </div>

      <!-- Action buttons -->
      <div class="flex items-center space-x-4 text-sm text-gray-400">
        <% if user_signed_in? && comment.can_be_replied_to? %>
          <%= button_to t('comments.reply'), "#",
                method: :get,
                class: "hover:text-white cursor-pointer",
                data: {
                  action: "click->comments#toggleReplyForm",
                  comment_id: comment.id
                } %>
        <% end %>

        <% if user_signed_in? && (comment.user == current_user || current_user.staff?) %>
          <%= link_to t('comments.edit'), edit_comment_path(comment),
                class: "hover:text-white cursor-pointer",
                data: {
                  action: "click->comments#toggleEditForm",
                  comment_id: comment.id
                } %>
          <%= button_to t('comments.delete'), comment_path(comment),
                data: { turbo_method: :delete,
                turbo_confirm: t('comments.delete_confirm')},
                class: "text-red-600 cursor-pointer" %>
        <% end %>
      </div>

      <!-- Reply form (hidden by default) -->
      <% if user_signed_in? && comment.can_be_replied_to? %>
        <div id="reply_form_<%= comment.id %>" class="mt-4 hidden" data-comments-target="replyForm">
          <%= form_with model: [comment.game, comment.game.comments.build],
                        url: game_comments_path(comment.game),
                        local: true,
                        class: "space-y-3" do |f| %>
            <%= f.hidden_field :parent_id, value: comment.id %>
            <div>
              <%= f.text_area :content,
                    placeholder: t('comments.write_reply'),
                    rows: 3,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
              <div class="text-xs text-gray-500 mt-1">
                <%= t('comments.markdown_support') %> • <%= t('comments.character_limit', min: 20, max: 500) %>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= f.submit t('comments.post_reply'),
                    class: "px-4 py-2 bg-[#cc6600]  text-white text-sm rounded-md cursor-pointer" %>
              <button type="button"
                      class="px-4 py-2 bg-gray-200 text-gray-700 text-sm rounded-md hover:bg-gray-300"
                      data-action="click->comments#hideReplyForm"
                data-comment-id="<%= comment.id %>">
                <%= t('comments.cancel') %>
              </button>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Edit form (hidden by default) -->
      <% if user_signed_in? && (comment.user == current_user || current_user.staff?) %>
        <div id="edit_form_<%= comment.id %>" class="mt-4 hidden" data-comments-target="editForm">
          <%= form_with model: comment,
                        local: true,
                        class: "space-y-3" do |f| %>
            <div>
              <%= f.text_area :content,
                    rows: 3,
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" %>
              <div class="text-xs text-gray-500 mt-1">
                <%= t('comments.markdown_support') %> • <%= t('comments.character_limit', min: 20, max: 500) %>
              </div>
            </div>
            <div class="flex space-x-2">
              <%= f.submit t('comments.update_comment'),
                    class: "px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <button type="button"
                      class="px-4 py-2 bg-gray-200 text-gray-700 text-sm rounded-md hover:bg-gray-300"
                      data-action="click->comments#hideEditForm"
                data-comment-id="<%= comment.id %>">
                <%= t('comments.cancel') %>
              </button>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Replies -->
      <% if comment.replies.any? %>
        <div class="mt-4 ml-4 pl-4 border-l-2 border-gray-100">
          <% comment.replies.ordered.each do |reply| %>
            <%= render 'comments/comment', comment: reply %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
