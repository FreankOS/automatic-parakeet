<div class="mb-8">
  <div class="flex justify-between items-center">
    <h2 class="flex text-xl text-white mb-2">
      <%= image_tag 'icons/upload.svg', class: 'mr-1' %>
      Games
    </h2>
  </div>

  <% if user_games.any? %>
    <!-- Filters/Sort -->
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center space-x-4">
        <span class="text-gray-400 text-sm">Sort by:</span>
        <div class="flex space-x-2">
          <button class="inline-flex items-center px-3 py-2 border border-[#393a3a] rounded-lg text-sm font-medium transition-colors bg-[#0c1925]">Recent</button>
          <button class="inline-flex items-center px-3 py-2 border border-[#393a3a] rounded-lg text-sm font-medium transition-colors hover:bg-[#162737]">Popular</button>
          <button class="inline-flex items-center px-3 py-2 border border-[#393a3a] rounded-lg text-sm font-medium transition-colors hover:bg-[#162737]">Most Downloaded</button>
        </div>
      </div>
    </div>

    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% user_games.each do |game| %>
          <%= render partial: "partials/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
        <% end %>
      </div>
      <% if total_games > 6 %>
        <%= link_to "Show More", "#",
            class: "block w-full text-center mt-8 border-b border-b-[#ccc] opacity-50 hover:opacity-100 text-[#ccc] font-medium text-xl" %>
      <% end %>
    </div>

  <% else %>
    <div class="text-center">
      <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      </div>
      <h3 class="text-xl font-medium text-gray-300 mb-2">No games yet</h3>
      <p class="text-gray-500">
        <% if user == current_user %>
          Start creating games to share with the community!
        <% else %>
          <%= user.display_name %> hasn't published any games yet.
        <% end %>
      </p>
      <% if user == current_user %>
        <%= link_to "Create Your First Game", new_game_path, 
            class: "mt-4 inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" %>
      <% end %>
    </div>
  <% end %>
</div>
