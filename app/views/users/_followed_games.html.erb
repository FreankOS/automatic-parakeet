<div class="mb-8">
  <div class="flex justify-between items-center">
    <h2 class="text-xl text-white">Followed Games</h2>
  </div>

  <% if followed_games&.any? %>
    <!-- Filters/Sort -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-4">
        <span class="text-gray-400 text-sm">Sort by:</span>
        <div class="flex space-x-2">
          <button class="bg-blue-600 text-white px-3 py-1 rounded text-sm">Recent</button>
          <button class="text-gray-400 hover:text-white px-3 py-1 rounded text-sm">Popular</button>
          <button class="text-gray-400 hover:text-white px-3 py-1 rounded text-sm">Most Downloaded</button>
        </div>
      </div>
    </div>

    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% followed_games.each do |game| %>
          <%= render partial: "games/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center">
      <div class="w-20 h-20 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-medium text-gray-300 mb-4">No games followed yet</h3>
      <p class="text-gray-500 max-w-md mx-auto mb-8">
        <% if user == current_user %>
          Discover interesting games and start following your favorites!
        <% else %>
          <%= user.username %> hasn't followed any games yet. Check back later!
        <% end %>
      </p>
    </div>
  <% end %>
</div>
