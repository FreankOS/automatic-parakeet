<div class="mb-8">
  <div class="flex justify-between items-center">
    <h2 class="flex text-xl text-white mb-2">
      <%= image_tag 'icons/unsubscribe.svg', class: 'mr-1' %>
      Followed Games</h2>
  </div>

  <% if followed_games&.any? %>
    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% followed_games.each do |game| %>
          <%= render partial: "partials/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center">
      <div class="flex justify-center">
        <%= image_tag 'icons/subscribe.svg', class: 'w-10 h-10' %>
      </div>
      <h3 class="text-2xl font-medium text-gray-300 mb-4">No games followed yet</h3>
      <p class="text-gray-500 max-w-md mx-auto mb-8">
        <% if user == current_user %>
          Discover interesting games and start following your favorites!
        <% else %>
          <%= user.username %> hasn't followed any games yet. Check back later!
        <% end %>
      </p>
    </div>
  <% end %>
</div>
