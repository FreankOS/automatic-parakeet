<% content_for :title, "Settings" %>

<!-- Main Content Area -->
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold">Settings</h1>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div>
    <%= form_with model: @user, local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-600/20 border border-red-600 rounded-lg p-4">
          <h3 class="text-red-400 font-medium mb-2">Please fix the following errors:</h3>
          <ul class="text-red-300 text-sm space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li>• <%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Preferences Section -->
      <div class="border-t border-gray-600 pt-6">
        <h2 class="text-xl font-bold mb-4 text-white">General</h2>
           
        <!-- Language Preference -->
        <div class="max-w-md">
          <%= form.label :locale, "Language", 
              class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.select :locale, 
              options_for_select([
                ["English", "en"],
                ["Español", "es"]
              ], @user.locale),
              { include_blank: "Use system default" },
              { class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
        </div>
      </div>

      <!-- Account Data -->
      <div>
        <h2 class="text-xl font-bold mb-4 text-white">Account Data</h2>
        <div>
          <!-- Email (Read-only) -->
          <div>
            <%= form.label :email, "Email Address", 
                class: "block text-base mb-2" %>
            <a class="block text-sm text-gray-300 mb-4" for="user_email">Change Email</a>
            <%= form.label :password, "Password", 
                class: "block text-base mb-2" %>
            <%= link_to "Change Password", edit_user_registration_path, 
                class: "block text-sm text-gray-300 mb-4" %>
          </div>
        </div>
      </div>

      <!-- Personal Information Section -->
      <div>
        <h2 class="text-xl font-bold mb-4 text-white">Personal Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
             
          <!-- First Name -->
          <div>
            <%= form.label :given_name, "First Name", 
                class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.text_field :given_name, 
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your first name" %>
          </div>

          <!-- Last Name -->
          <div>
            <%= form.label :surname, "Last Name", 
                class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.text_field :surname, 
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your last name" %>
          </div>

          <!-- Phone Number -->
          <div class="md:col-span-2">
            <%= form.label :phone_number, "Phone Number", 
                class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= form.telephone_field :phone_number, 
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                placeholder: "Enter your phone number (optional)" %>
          </div>
        </div>
      </div>

      <!-- Account Stats (Read-only info) -->
      <div class="border-t border-gray-600 pt-6">
        <h2 class="text-xl font-bold mb-4 text-white">Statistics</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            
          <div class="bg-gray-700 rounded-lg p-4">
            <div class="text-2xl font-bold"><%= @user.games.count %></div>
            <div class="text-gray-300 text-sm">Games Published</div>
          </div>

          <div class="bg-gray-700 rounded-lg p-4">
            <div class="text-2xl font-bold"><%= @user.followed_games.count %></div>
            <div class="text-gray-300 text-sm">Subscriptions</div>
          </div>

          <div class="bg-gray-700 rounded-lg p-4">
            <div class="text-2xl font-bold"><%= @user.commented_games.count %></div>
            <div class="text-gray-300 text-sm">Commented Games</div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-6">
        <div class="flex space-x-4">
          <%= form.submit "Save Changes", 
              class: "px-6 py-2 bg-[#cc6600] hover:bg-[#b85c00] text-white rounded-lg font-medium transition-all duration-200 shadow-sm" %>
        </div>

      </div>
    <% end %>
  </div>

 </div>
