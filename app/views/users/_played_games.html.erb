<div class="mb-8">
  <div class="flex justify-between items-center">
    <h2 class="flex text-xl text-white mb-2">
      <%= image_tag 'icons/download.svg', class: 'mr-1' %>
      Played Games
</h2>
  </div>

  <% if played_games.any? %>
    <!-- Filters/Sort -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-4">
        <span class="text-gray-400 text-sm">Sort by:</span>
        <div class="flex space-x-2">
          <button class="bg-blue-600 text-white px-3 py-1 rounded text-sm">Recent</button>
          <button class="text-gray-400 hover:text-white px-3 py-1 rounded text-sm">Popular</button>
          <button class="text-gray-400 hover:text-white px-3 py-1 rounded text-sm">Most Downloaded</button>
        </div>
      </div>
    </div>

    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% played_games.each do |game| %>
          <%= render partial: "games/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center">
      <div class="flex justify-center">
        <%= image_tag 'icons/download.svg', class: 'w-10 h-10' %>
      </div>
      <h3 class="text-2xl font-medium text-gray-300 mb-4">No games played yet</h3>
      <p class="text-gray-500 max-w-md mx-auto mb-8">
        <% if user == current_user %>
          Discover interesting games and start play them!
        <% else %>
          <%= user.username %> hasn't palyed any games yet. Check back later!
        <% end %>
      </p>
    </div>
  <% end %>
</div>
