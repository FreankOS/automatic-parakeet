<%= form_with(model: [@game, @news], local: true) do |form| %>
  <% if @news.errors.any? %>
    <div class="mb-4 text-red-600">
      <%= @news.errors.full_messages.to_sentence %>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :title, class: 'block font-bold mb-2' %>
    <%= form.text_field :title, class: 'border rounded w-full p-2' %>
  </div>
  <div class="mb-4">
    <%= form.label :body, class: 'block font-bold mb-2' %>
    <%= form.text_area :body, class: 'border rounded w-full p-2', rows: 6 %>
  </div>
  <%= form.submit 'Add News', class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
<% end %>
