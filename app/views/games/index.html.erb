<% content_for :title, "Games" %>

<div class="container mx-auto px-4 max-w-6xl">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        <% if params[:q].present? && params[:q][:name_or_description_cont].present? %>
          Search Results
        <% else %>
          Games
        <% end %>
      </h1>
      <p class="text-gray-600">
        <% if params[:q].present? && params[:q][:name_or_description_cont].present? %>
          Found <%= pluralize(@games.count, 'game') %> matching "<%= params[:q][:name_or_description_cont] %>"
          <%= link_to "Clear search", games_path, class: "text-blue-600 hover:text-blue-800 ml-2" %>
        <% else %>
          Discover amazing indie games from our community
        <% end %>
      </p>
    </div>

    <% if user_signed_in? %>
      <%= link_to new_game_path,
          class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Upload Game
      <% end %>
    <% end %>
  </div>

  <% if @games.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @games.each do |game| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900 line-clamp-2">
                <%= link_to game.name, game_path(game), class: "hover:text-blue-600 transition-colors" %>
              </h3>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= game.release_type_humanized %>
              </span>
            </div>

            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              <%= truncate(game.description, length: 120) %>
            </p>

            <div class="space-y-2 mb-4">
              <div class="flex items-center text-sm text-gray-500">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                <%= game.genre.translated_name %>
              </div>

              <div class="flex items-center text-sm text-gray-500">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= game.tool.name %>
              </div>

              <div class="flex items-center text-sm text-gray-500">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                by <%= game.user.given_name || game.user.email.split('@').first %>
              </div>

              <!-- Rating Display -->
              <%= render 'shared/rating_display', game: game %>
            </div>

            <% if game.adult_content %>
              <div class="mb-4">
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Adult Content
                </span>
              </div>
            <% end %>

            <div class="flex items-center justify-between">
              <%= link_to "View Details", game_path(game),
                  class: "text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors" %>

              <% if game.download_links.any? %>
                <span class="text-xs text-gray-500">
                  <%= pluralize(game.download_links.count, 'download') %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <% if params[:q].present? && params[:q][:name_or_description_cont].present? %>
        <!-- No search results -->
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No games found</h3>
        <p class="mt-1 text-sm text-gray-500">
          No games match your search for "<%= params[:q][:name_or_description_cont] %>".
          <br>
          Try a different search term or
          <%= link_to "browse all games", games_path, class: "text-blue-600 hover:text-blue-800" %>.
        </p>
      <% else %>
        <!-- No games at all -->
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No games yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first game.</p>
        <% if user_signed_in? %>
          <div class="mt-6">
            <%= link_to new_game_path,
                class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white rounded-lg font-medium transition-all duration-200 shadow-sm" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Upload Your First Game
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>