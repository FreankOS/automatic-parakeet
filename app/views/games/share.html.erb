<turbo-frame id="share_game_frame">
  <div class="flex flex-col items-center gap-4" data-controller="copy">
    <p class="text-lg text-white">Share this game with your friends!</p>
    <input type="text"
           class="w-full px-3 py-2 rounded bg-gray-800 text-white"
           value="<%= game_url(@game) %>"
           readonly
           data-copy-target="input">
    <button type="button"
            class="btn btn-secondary"
            data-action="click->copy#copy">
      Copy Link
    </button>
    <div class="flex gap-2 mt-2">
      <a href="https://twitter.com/intent/tweet?url=<%= CGI.escape(game_url(@game)) %>"
         target="_blank"
         class="btn btn-twitter">Twitter</a>
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= CGI.escape(game_url(@game)) %>"
         target="_blank"
         class="btn btn-facebook">Facebook</a>
    </div>
  </div>
</turbo-frame>
