<div class="download-link-fields border border-gray-200 rounded-lg p-4 mb-4">
  <%= form.hidden_field :id %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div>
      <%= form.label :label, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :label,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "e.g., Windows Download, Mac Version" %>
    </div>

    <div>
      <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.url_field :url,
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "https://..." %>
    </div>
  </div>

  <div class="mb-4">
    <%= form.label :platform_ids, "Platforms", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
      <% platforms.each do |platform| %>
        <label class="flex items-center">
          <%= check_box_tag "game[download_links_attributes][#{form.index}][platform_ids][]",
              platform.id,
              form.object.platform_ids.include?(platform.id),
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700"><%= platform.name %></span>
        </label>
      <% end %>
    </div>
  </div>

  <button type="button"
          onclick="this.closest('.download-link-fields').remove()"
          class="text-red-600 hover:text-red-800 text-sm font-medium">
    Remove Download Link
  </button>
</div>