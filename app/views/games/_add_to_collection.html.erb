<div class="inline-flex" data-controller="toggle">
  <!-- Add to Collection Button -->
  <button class="inline-flex items-center cursor-pointer">
    Add to Collection
    <%= image_tag "icons/collections.svg", class: "ml-2" %>
  </button>

  <!-- Overlay -->
  <div data-toggle-name="add_to_collection" class="hidden">
    <!-- Overlay -->
    <div class="fixed inset-0 bg-black bg-opacity-50 z-40" 
     data-action="click->toggle#toggle" 
     data-toggle-target-name="add_to_collection"></div>

    <!-- Window -->
    <div class="fixed inset-0 z-50 flex items-center justify-center">
      <div class="relative  sm:max-w-[600px] sm:max-h-[400px] w-full h-full bg-[#041221] rounded-lg shadow-lg border border-[#cc6600] p-6">
        
        <!-- Close Button -->
        <button 
          class="absolute top-3 right-3 cursor-pointer hover:opacity-80" 
          aria-label="Close"
          data-action="click->toggle#toggle"
          data-toggle-target-name="add_to_collection">
          <%= image_tag 'icons/close.svg' %>
        </button>

        <!-- Content -->
        <h3 class="font-medium text-white mb-4 text-2xl">Add to Collection Button</h3>

        <div class="space-y-4">
          <a class="block w-full text-center border-b border-b-[#ccc] opacity-50 hover:opacity-100 text-white font-medium text-xl cursor-pointer">
            Create a New Collection
          </a>
          <div class="text-xl">Your Collections:</div>
          <div class="flex items-center justify-between py-2 border-b border-gray-700 last:border-b-0">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Name Collection 1</p>
                <p class="text-gray-400 text-sm">25 Games</p>
              </div>
            </div>
            <div class="text-green-400 font-bold">Add +</div>
          </div>
          <div class="flex items-center justify-between py-2 border-b border-gray-700 last:border-b-0">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Name Collection 2</p>
                <p class="text-gray-400 text-sm">123 Games</p>
              </div>
            </div>
            <div class="text-green-400 font-bold">Add +</div>
          </div>
          <div class="flex items-center justify-between py-2 border-b border-gray-700 last:border-b-0">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div>
                <p class="text-white font-medium">Name Collection 3</p>
                <p class="text-gray-400 text-sm">44 Games</p>
              </div>
            </div>
            <div class="text-green-400 font-bold">Add +</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
