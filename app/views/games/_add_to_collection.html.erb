<% overlay_name = "add_to_collection" %>
<% overlay_title = "Add to Collection" %>

<% content_for :"#{overlay_name}_button" do %>
  <%= button_tag type: "button", 
      class: "inline-flex items-center cursor-pointer",
      data: { action: "click->toggle#toggle", toggle_target_name: overlay_name } do %>
    Add to Collection
    <%= image_tag 'icons/collections.svg', class: "ml-2" %>
  <% end %>
<% end %>

