<% overlay_name = "dashboard" %>
<% overlay_title = "Dashboard" %>

<% content_for :"#{overlay_name}_button" do %>
  <%= button_tag type: "button",
      class: "cursor-pointer",
      data: { action: click->modal#open", toggle_target_name: overlay_name } do %>
    <%= image_tag 'icons/settings.svg' %>
  <% end %>
<% end %>

<%= render 'partials/overlay', overlay_name: overlay_name, overlay_title: overlay_title %>
