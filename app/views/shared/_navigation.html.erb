<!-- Navigation Header -->
<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <div class="h-8 w-8 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900">GameHub</span>
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Home", root_path, 
            class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "Games", "#", 
            class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "Developers", "#", 
            class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "About", "#", 
            class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
      </div>

      <!-- User Authentication -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- Signed In User -->
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-700">
              Welcome, <span class="font-medium"><%= current_user.given_name %></span>!
            </span>
            <%= link_to "Profile", "#", 
                class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete,
                class: "bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg font-medium transition-colors" %>
          </div>
        <% else %>
          <!-- Guest User -->
          <div class="flex items-center space-x-3">
            <%= link_to "Sign in", new_user_session_path, 
                class: "text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
            <%= link_to "Sign up", new_user_registration_path, 
                class: "bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 shadow-sm" %>
          </div>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button type="button" class="text-gray-700 hover:text-blue-600 focus:outline-none focus:text-blue-600" 
                data-controller="mobile-menu" data-action="mobile-menu#toggle">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden hidden" data-mobile-menu-target="menu">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-200">
        <%= link_to "Home", root_path, 
            class: "block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "Games", "#", 
            class: "block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "Developers", "#", 
            class: "block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        <%= link_to "About", "#", 
            class: "block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
        
        <% unless user_signed_in? %>
          <div class="pt-4 border-t border-gray-200">
            <%= link_to "Sign in", new_user_session_path, 
                class: "block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium transition-colors" %>
            <%= link_to "Sign up", new_user_registration_path, 
                class: "block px-3 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg font-medium transition-colors mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>