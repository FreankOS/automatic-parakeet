<% content_for :title, "Most Downloaded" %>

<div class="container mx-auto px-4 max-w-6xl">
  <% if @most_downloaded_games.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @most_downloaded_games.each_with_index do |game, index| %>
        <%= render partial: "partials/thumbnail", locals: { game: game, show_rank_number: true, rank_number: index + 1 } %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-400 py-12">No downloads yet.</p>
  <% end %>
</div>

