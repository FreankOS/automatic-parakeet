<% content_for :title, "History" %>

<div class="container mx-auto px-4 max-w-6xl">
  <h2 class="text-xl text-white mb-2">Commented Games</h2>
  <% if @commented_games.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @commented_games.each do |game| %>
        <%= render partial: "partials/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-400 py-12">No Commented Games yet.</p>
  <% end %>

  <h2 class="text-xl text-white mb-2">Followed Games</h2>
  <% if @followed_games.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @followed_games.each do |game| %>
        <%= render partial: "partials/thumbnail", locals: { game: game, show_rank_number: false, rank_number: nil } %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-400 py-12">No Followed Games yet.</p>
  <% end %>
</div>
